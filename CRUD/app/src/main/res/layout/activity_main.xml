<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Nombre del Producto -->
    <EditText
        android:id="@+id/edit_nombre_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Producto"
        android:textSize="16sp"
        android:padding="10dp" />

    <!-- Precio del Producto -->
    <EditText
        android:id="@+id/edit_precio_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio del Producto"
        android:inputType="numberDecimal"
        android:textSize="16sp"
        android:padding="10dp" />

    <!-- Stock del Producto -->
    <EditText
        android:id="@+id/edit_stock_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stock del Producto"
        android:inputType="number"
        android:textSize="16sp"
        android:padding="10dp" />

    <!-- Descripción del Producto -->
    <EditText
        android:id="@+id/edit_descripcion_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción del Producto"
        android:textSize="16sp"
        android:padding="10dp" />

    <!-- Botón para agregar producto -->
    <Button
        android:id="@+id/btn_agregar_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Producto"
        android:textSize="16sp"
        android:padding="10dp" />

    <!-- Botón para actualizar producto -->
    <Button
        android:id="@+id/btn_actualizar_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar Producto"
        android:textSize="16sp"
        android:padding="10dp" />

    <!-- Botón para eliminar producto -->
    <Button
        android:id="@+id/btn_eliminar_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Producto"
        android:textSize="16sp"
        android:padding="10dp" />

    <!-- ListView para mostrar los productos -->
    <ListView
        android:id="@+id/lista_productos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp" />
</LinearLayout>




